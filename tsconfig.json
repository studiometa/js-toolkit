{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./packages/js-toolkit/"
  },
  "include": [
    "packages/global.d.ts",
    "packages/js-toolkit/abstracts/**/*.js",
    "packages/js-toolkit/decorators/**/*.js",
    "packages/js-toolkit/helpers/**/*.js",
    "packages/js-toolkit/services/**/*.js",
    "packages/js-toolkit/utils/**/*.js",
    "packages/js-toolkit/abstracts/**/*.ts",
    "packages/js-toolkit/decorators/**/*.ts",
    "packages/js-toolkit/helpers/**/*.ts",
    "packages/js-toolkit/services/**/*.ts",
    "packages/js-toolkit/utils/**/*.ts",
    "packages/js-toolkit/index.ts"
  ]
}
